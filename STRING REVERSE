#include <stdio.h>
#include <string.h>
void main()
    {
  	    char string[30],reverse[30];
  	    int length,i,j=0;
        printf("\nEnter string : ");
  	    scanf("%s",string);
  	    length=strlen(string);
        for(i =(length- 1); i >= 0; i--)
  	    {
  		      reverse[j] = string[i];
            j++;
  	    }
  	    reverse[j] = '\0';
        printf("\nString after reversing : %s",reverse);
  	}
