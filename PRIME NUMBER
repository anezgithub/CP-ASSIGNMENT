#include<stdio.h>
void main()
  {
      int n,flag=0;
      printf("Enter a number : ");
      scanf("%d",&n);
      if(n==1)
      {
           printf("\nThe number is neither prime nor composite ");
      }
      else
      {
           for(int i=2;i<=n/2;i++)
           {
              if(n%i==0)
              {
                  printf("\nNumber is not prime ");
                  flag=1;
                  break;
              }
          }
          if(flag==0)
          {
                printf("\nNumber is prime ");
          }
      }
  }
      
